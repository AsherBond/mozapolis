<%= provide(:title, @album.title) %>
<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <li>
        <%= link_to_icon "user", @album.artist.artist_name, @album.artist %> <span class="divider">/</span>
      </li>
      <li class="active"><i class="icon-music"></i> Listening to album: <strong><%= @album.title %></strong></li>
    </ul> 
  </div>
</div>

<div class="row">
  <div class="span4">
    <div class="well">
      <h2><%= @album.title %></h2>
      <p>by <%= @album.artist.artist_name %>
      <hr>
      <p><%= @album.description %></p>
      <h6>Label / Year</h6>
      <p><%= @album.label %>, <%= @album.year %></p> 
    </div>
    <ul class="thumbnails">
      <li class="span4">
        <%= link_to(image_tag(@album.artwork.url(:full)), "#", :class => "thumbnail") %>
      </li>
    </ul>

  </div>

  <div class="span8">
    <%= render "shared/player" %>

    <div class="well" id="comments">
      <h6 class="hb">Comments</h6>
      <%= render "comments/comments" %>
      <h6 class="hb">Write your own comment</h6>
      <%= render "comments/form" %>
    </div>

  </div>
</div>
