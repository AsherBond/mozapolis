<div class="row">
	<div class="span6">
		<h2><%= @gallery.title %> Images</h2>
		<ul class="thumbnails">
			<% @images.each do |img| %>
			<li class="span3">
				<%= link_to(image_tag(img.file.url(:medium)), gallery_image_path(img), :class => "thumbnail") %>
			</li>
			<% end %>
		</ul>
	</div>
	<div class="span6">
		<h2>Comments</h2>
		<div class="well">
			<%= render "comments/comments" %>
			<h6 class="hb">Write your own comment</h6>
			<%= render "comments/form" %>
		</div>
	</div>
</div>