<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<h2><i class="icon-headphones"></i> Artist Sign up</h2>
			<p>All we need is your email, and a few other details to get started! </p>
			<h6>Or sign up with....</h6>
			<p style="text-align:center;">
				<%= link_to "<i class='icon-twitter'></i> Twitter".html_safe, nil, :class => "btn btn-large btn-info" %>
				<%= link_to "<i class='icon-facebook'></i> Facebook".html_safe, nil, :class => "btn btn-large" %>
			</p>
			<hr>
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :defaults => { :input_html => { :class => 'span5' } }) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :email, :required => true, :autofocus => true %>
			    <%= f.input :first_name, :required => true %>
			    <%= f.input :last_name, :required => true %>
			    <%= f.input :username, :required => true %>
			    <%= f.input :artist_name, :required => true %>
			    <%= f.input :password, :required => true %>
			    <%= f.input :password_confirmation, :required => true %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign up", :class => "btn btn-inverse" %>
			  </div>
			<% end %>

			<h6>Helpful Links</h6>

			<%= render "artists/shared/links" %>
		</div>
	</div>
</div>