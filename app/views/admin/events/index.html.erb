<%= provide(:title, 'Manage Events') %>
<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <li class="active"><i class="icon-lock"></i> Top Secret</li>
    </ul> 
  </div>
</div>

<div class="row">
	<div class="span3">
		<div class="well">
			<h4><i class="icon-wrench"></i> Events Admin</h4>
			<hr>
			<p>You can edit, view, or delete any event.</p>
		</div>
	</div>
	<div class="span9">
		<div class="pull-right">
			<%= link_to "<i class='icon-plus'></i> New Event".html_safe, new_admin_event_path, :class => "btn btn-success" %>
		</div>
		<h2>All Events</h2>
		<table class="table table-striped table-bordered">
		  <thead>
		    <tr>
		      <th width="30%">Title</th>
		      <th width="20%">Start</th>
		      <th width="20%">End</th>
		      <th width="30%">Options</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @events.each do |e| %>
		    <tr>
		      <td><%= link_to e.title, e %></td>
		      <td><%= e.start.strftime('%b %d, %Y at %H:%M') %></td>
		      <td><%= e.end.strftime('%b %d, %Y at %H:%M') %></td>
		      <td>
		      	<%= link_to "Edit", edit_admin_event_path(e), :class => "btn btn-mini" %> 
		      	<%= link_to "Delete", event_path(e), :class => "btn btn-danger btn-mini", :confirm => "Are you sure you want to delete this event?", :method => :delete %> 
		      </td>
		    </tr>
		    <% end %>

		  </tbody>
		</table>
		<% if @events.empty? %>
			<div class="alert alert-info">
				<a class="close" data-dismiss="alert" href="#">Ã—</a>
        		There are no events. <%= link_to "<i class='icon-plus'></i> Click here to create one.".html_safe, new_admin_event_path %>
			</div>
		<% end %>
	</div>
</div>