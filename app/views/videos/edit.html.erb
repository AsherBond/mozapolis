<div class="row">
	<div class="span6 offset3">
		<ul class="breadcrumb">
			<li>
				<%= link_to_icon "dashboard", "Video Dashboard", videos_path %>
				<span class="divider">/</span>
			</li>
			<li class="active"><i class="icon-edit"></i> Editing Video: <strong><%= link_to @video.title, @video %></strong></li>
		</ul>

		<div class="well">
			<%- model_class = Video -%>
			<div class="page-header">
			  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
			                                   :default => "Edit #{model_class.model_name.human}") %></h1>
			</div>
			<%= render :partial => 'form' %>
		</div>
	</div>
</div>