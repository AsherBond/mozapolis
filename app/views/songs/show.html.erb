<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:album_id) %>:</strong></dt>
  <dd><%= @song.album_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @song.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lyrics) %>:</strong></dt>
  <dd><%= @song.lyrics %></dd>
  <dt><strong><%= model_class.human_attribute_name(:track_number) %>:</strong></dt>
  <dd><%= @song.track_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:featured_artist) %>:</strong></dt>
  <dd><%= @song.featured_artist %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
