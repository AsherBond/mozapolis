<%= provide(:title, 'Editing Image: '+ @image.title) %>
<div class="row">
  <div class="span6 offset3">
    <ul class="breadcrumb">
      <li>
        <%= link_to_icon "dashboard", "Gallery Dashboard", galleries_path %>
        <span class="divider">/</span>
      </li>
      <li>
        <%= link_to_icon "camera", @gallery.title, gallery_path(@gallery) %>
        <span class="divider">/</span>
      </li>
      <li>
        <%= link_to_icon "wrench", "Image Manger", gallery_images_path(@gallery) %>
        <span class="divider">/</span>
      </li>
      <li class="active"><i class="icon-edit"></i> Edit Image</li>
    </ul>

    <div class="well">

      <%= render 'form' %>

    </div>
  </div>
  <div class="span3">
    <h6>Current Image</h6>
    <% if @image.file.file? %>
      <p><%= image_tag @image.file.url(:small) %></p>
    <% else %>
      <p>Please upload an image.</p>
    <% end %>
  </div>
</div>
