<%= provide(:title, @image.title) %>
<div class="row">
	<div class="span6 offset3">
		<ul class="thumbnails">
			<li class="span6">
				<%= link_to(image_tag(@image.file.url), '#', :class => "thumbnail") %>
			</li>
		</ul>
		<h2>Comments</h2>
		<div class="well">
	      <%= render "comments/comments" %>
	      <h6 class="hb">Write your own comment</h6>
	      <%= render "comments/form" %>
		</div>
	</div>
</div>