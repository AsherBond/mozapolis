<%- if controller_name != 'sessions' %>
  <%= link_to "<i class='icon-signin'></i> Sign in".html_safe, new_session_path(resource_name), :class => "btn btn-mini btn-success" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "<i class='icon-user'></i> Sign up".html_safe, new_registration_path(resource_name), :class => "btn btn-mini btn-danger" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "<i class='icon-key'></i> Forgot your password?".html_safe, new_password_path(resource_name), :class => "btn btn-mini btn-info" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "<i class='icon-pencil'></i> Didn't receive confirmation instructions?".html_safe, new_confirmation_path(resource_name), :class => "btn btn-mini btn-warning" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "<i class='icon-unlock'></i> Didn't receive unlock instructions?".html_safe, new_unlock_path(resource_name), :class => "btn btn-mini btn-danger" %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>