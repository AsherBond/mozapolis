<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<h2><i class="icon-user"></i> Fan Sign in</h2>

			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :defaults => { :input_html => { :class => 'span5' } }) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :email, :required => false, :autofocus => true %>
			    <%= f.input :password, :required => false %>
			    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign in", :class => "btn btn-inverse" %>
			  </div>
			<% end %>
			<h6>Helpful Links</h6>
			<%= render "fans/shared/links" %>
		</div>
	</div>
</div>